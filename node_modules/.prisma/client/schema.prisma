datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String
}

model Topic {
  id               Int    @id @default(autoincrement())
  name             String
  shortDescription String
}

generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/client"
}
